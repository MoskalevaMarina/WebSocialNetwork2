@model WebSocialNetwork2.ViewModels.LoginViewModel

@{
    ViewData["Title"] = "Login";
}


<div class="block-reg background-white">
    <h4 class="center">Добро пожаловать!</h4>
    <form class="frm" method="post" asp-controller="AccountManager" asp-action="Login"
          asp-route-returnUrl="@Model.ReturnUrl">
        <div class="validation" asp-validation-summary="ModelOnly"></div>
        <div>
            <div class="mrgn">
                <label asp-for="Login"></label> <br />
                <input asp-for="Login" class="form-control" />
                <span asp-validation-for="Login" class="text-danger"></span>
            </div>
        </div>
        <div>
            <div class="mrgn">
                <label asp-for="Password"></label> <br />
                <input asp-for="Password" class="form-control" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
        </div>
        <div>
            <div class="mrgn">
                <label asp-for="RememberMe"></label><br />
                <input asp-for="RememberMe" />

            </div>
        </div>
        <div>
            <button class="btn btn-block btn-lg" style="background-color: #DE95BA; color: snow;">Войти</button>

        </div>
    </form>
</div>

<script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
<script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>