@using Microsoft.AspNetCore.Identity;
@using WebSocialNetwork2.Models;
@inject SignInManager<User> SignInManager
@inject UserManager<User> UserManager

<ul class="navbar-nav">
    @if (SignInManager.IsSignedIn(User))
    {
        <button class="enter_submit" asp-area="" asp-controller="AccountManager" asp-action="Logout">Выход</button>
        <form method="post" asp-controller="AccountManager" asp-action="Logout">
            <input class="enter_submit" type="submit" value="Выход" />
        </form>
    }
    else
    {
        <li class="nav-item">
            <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Register">Register</a>
        </li>
        <li class="nav-item">
            <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Login">Login</a>
        </li>
    }
</ul>